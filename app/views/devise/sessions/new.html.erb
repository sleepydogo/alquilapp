<head>
	<%= stylesheet_link_tag 'bootstrap'%>
	<%= stylesheet_link_tag 'login-styles'%>
</head>


<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Iniciar sesion</h2>
              <p class="text-white-50 mb-5">Entre su correo y contraseña</p>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		        <%= render "devise/shared/error_messages", resource: resource %>
              
                <div class="form-outline form-white mb-4">
                  <%= f.label :email, 'E-Mail' %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>

                <div class="form-outline form-white mb-4">
                  <%= f.label :password, 'Contraseña'  %><br />
                  <%= f.password_field :password, autocomplete: "current-password" %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, 'Recuerdame' %>
                  </div>
                <% end %>
                <div class="actions">
                  <%= f.submit "Log in", class:"btn btn-outline-light btn-lg px-5", type:"submit", label:'Iniciar sesion' %>
                </div>
              <% end %>
              <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">¿Olvido la contraseña?</a></p>
              <div class="d-flex justify-content-center text-center mt-4 pt-1">
                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
              </div>

            </div>

            <div>
              <p class="mb-0">¿No tiene una cuenta?<a href="/users/sign_up" class="text-white-50 fw-bold">Registrese</a>
              </p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
	
</section>

