<head>
<%= stylesheet_link_tag 'bootstrap' %>
<%= stylesheet_link_tag 'wallet-styles'%>
</head>


<h2>Perfil</h2>

<%= ensure_log %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :current_password, 'Contraseña actual'%> <i>(Necesitamos su contraseña actual para confirmar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="field form-group">
        <%= f.label :file, 'Documentos: Unico archivo con fotos de Licencia de conducir y DNI / Pasaporte' %><br />
        <%= f.file_field :file %>
        </div>

  <div class="actions">
    <%= f.submit "Actualizar datos" %>
  </div>
<% end %>
