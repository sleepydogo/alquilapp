</head>
<%= render 'shared/nav' if user_signed_in? %>


<p style="color: green"><%= notice %></p>


<h1>Vehiculos disponibles</h1>



<% if !Car.where(alquilado: false).empty? %>

<div class="container" style="margin-top:50px;">
        <div class="row">
        <% @cars_not_rented.each do |car| %>
            <div class="col-md-3">
                <div class="card-sl">
                    <div class="card-image">
                        <img <%= image_tag(car.photo, style:'width:100%') %>
                    </div>
                    <a class="card-action" href="#"><i class="fa fa-heart"></i></a>
                    <div class="card-heading">
                        Audi Q8
                    </div>
                    <div class="card-text">
                        Audi Q8 is a full-size luxury crossover SUV coup√© made by Audi that was launched in 2018.
                    </div>
                    <div class="card-text">
                        $67,400
                    </div>
                    <%= link_to "Alquilar", car, :class => "card-button" %>
                </div>
            </div>
          <% end %>
        </div>  

<% elsif %>
         <img
                      src="https://cdn.motor1.com/images/mgl/QRK8Z/s3/10-cars-that-could-disappear-soon.webp" />
         </div>
<% end %>


  <%= turbo_frame_tag "modal" %>

<% if (user_signed_in? && !!current_user.Admin?) %>
